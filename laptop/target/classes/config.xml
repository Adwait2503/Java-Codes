<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- bean definitions here -->
	<bean id="lap" class="com.te.spring.laptop.Laptop">
		<property name="cost" value="45000" />
		<constructor-arg ref="batt" />
		<constructor-arg ref="hd" />
		<constructor-arg ref="os" />
		<constructor-arg ref="ram" />
	</bean>
	<bean id="batt" class="com.te.spring.laptop.Battery">
		<property name="brand" value="Liapo" />
		<property name="volts" value="2.4" />
	</bean>
	<bean id="hd" class="com.te.spring.laptop.HardDisk">
		<constructor-arg value="Seagate" />
		<constructor-arg value="1.5" />
	</bean>
	<bean id="os" class="com.te.spring.laptop.Os">
		<property name="brand" value="Ryzen 5" />
		<property name="gen" value="5" />
	</bean>
	<bean id="ram" class="com.te.spring.laptop.Ram">
		<property name="size" value="8" />
	</bean>
</beans>